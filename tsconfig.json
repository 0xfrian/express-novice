{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@utils/*": ["utils/*"]
    },
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["jest"]
  },
  "include": [
    "./src/**/*",
    "./tests/**/*"
  ],
  "exclude": ["./node_modules/**/*"]
}
